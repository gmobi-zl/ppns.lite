<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/list_cell_bg">
    
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:background="@drawable/news_default" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivIcon"
        android:layout_alignTop="@+id/ivIcon"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="2"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/news_title"/>
    
    <ImageView 
        android:id="@+id/ivRssIcon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/ivIcon"
        android:layout_toRightOf="@+id/ivIcon"
        android:layout_marginLeft="16dp"
        android:src="@drawable/rss_feed"/>
    
    <TextView 
        android:id="@+id/tvRssSource"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivRssIcon"
        android:layout_toRightOf="@+id/ivRssIcon"
        android:layout_marginLeft="8dp"
        android:text=""
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="@color/news_title"
        android:ellipsize="marquee"/>
    
    <TextView 
        android:id="@+id/tvDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivIcon"
        android:layout_toRightOf="@+id/tvRssSource"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:text=""
        android:textSize="14sp"
        android:singleLine="true"
        android:gravity="right"
        android:textColor="@color/news_title"
        android:ellipsize="marquee"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/sepLine"/>
        
<!--</android.support.v7.widget.CardView>-->
</RelativeLayout>